DROP TABLE IF EXISTS youtube_videos_info;

CREATE TABLE youtube_videos_info
(
	ID serial PRIMARY KEY,
	Title VARCHAR(255) NOT NULL,
	Length INT NOT NULL,
	URL VARCHAR(510) UNIQUE NOT NULL
); 

