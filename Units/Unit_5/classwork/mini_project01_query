DROP TABLE IF EXISTS reviews;

CREATE TABLE reviews
(
	name VARCHAR(255),
	rating INT,
	review VARCHAR(255),
	video_id INT NOT NULL,
	FOREIGN KEY (video_id)
		REFERENCES youtube_videos_info(ID)
);

